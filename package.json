{
	"name": "open-related-documents",
	"displayName": "Open Related Documents",
	"description": "Open documents that related to current opened documents (E.g. accountModel.ts, accountService.ts, accountManager.ts, accountService.test.ts, accountServices.mock.ts)",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"open",
		"related",
		"document",
		"documents",
		"quick open"
	],
	"icon": "resources/img/logo.png",
	"author": "Tommy Zhao",
	"publisher": "SmarterTomato",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SmarterTomato/open-related-documents.git"
	},
	"activationEvents": [
		"onStartupFinished",
		"onCommand:openRelatedDocuments.quickOpen"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"contributes": {
		"commands": [{
			"command": "openRelatedDocuments.quickOpen",
			"title": "Quick Open",
			"category": "Open Related Documents"
		}],
		"keybindings": [{
			"command": "openRelatedDocuments.quickOpen",
			"key": "ctrl+;",
			"when": "editorTextFocus"
		}],
		"configuration": [{
			"title": "OpenRelatedDocuments",
			"properties": {
				"openRelatedDocuments.ignoredFileFilters": {
					"type": "array",
					"description": "Ignored path, glob pattern",
					"items": {
						"type": "string"
					},
					"uniqueItems": true,
					"default": [
						"**/.*",
						"**/__pycache__",
						"**/node_modules",
						"**/bower_components",
						"**/[Dd]ebug",
						"**/[Bb]in",
						"**/[Bb]uild",
						"**/[Rr]elease",
						"**/[Ll]og",
						"**/[Dd]ist",
						"**/[Oo]ut",
						"**/[Cc]overages",
						"**/[Cc]ache"
					]
				},
				"openRelatedDocuments.fileExtensionFilters": {
					"type": "array",
					"description": "Filter the file by extension, glob pattern. Remove first item to Enable this filter",
					"items": {
						"type": "string"
					},
					"uniqueItems": true,
					"default": [
						"*",
						"py",
						"ts",
						"js",
						"html",
						"css",
						"less",
						"sass",
						"cs",
						"xml",
						"h",
						"cpp",
						"json",
						"txt",
						"md"
					]
				},
				"openRelatedDocuments.matchRules": {
					"type": "array",
					"description": "Match file name with rules below",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"description": "Name of this rule, no effect on results"
							},
							"priority": {
								"type": "integer",
								"default": 5,
								"description": "Result will show in this order. Smaller number will show first. If number larger than 10, the result will in alphabetic order"
							},
							"breakChars": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"uniqueItems": true,
								"default": [
									"-",
									"_",
									".",
									"{Cap}"
								],
								"description": "The character that breaks in the file name into segments"
							},
							"expressions": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"description": "Expressions to match file names, see built in as example. {1} exact match. {-2} relative match, Test1 and Test = {-1}. Test1 and Test2 = {-2}"
							}
						}
					},
					"default": [{
							"name": "Default",
							"priority": 10,
							"breakChars": [
								"-",
								"_",
								".",
								"{Cap}"
							],
							"expressions": [
								"{-2}.{1}"
							]
						},
						{
							"name": "Same file name with different extension",
							"priority": 5,
							"breakChars": [],
							"expressions": [
								"{1}.*"
							]
						},
						{
							"name": "Angular Components",
							"priority": 5,
							"breakChars": [
								"-",
								"."
							],
							"expressions": [
								"{1}.component.*",
								"{1}.service.ts",
								"{1}.model.ts"
							]
						},
						{
							"name": "Angular Other",
							"priority": 5,
							"breakChars": [
								"-",
								"."
							],
							"expressions": [
								"{1}.{-2}.*"
							]
						},
						{
							"name": "JavaScript Test",
							"priority": 5,
							"breakChars": [
								"{Cap}",
								"-",
								"."
							],
							"expressions": [
								"{1}.*",
								"{1}.test.*",
								"{1}.tests.*",
								"{1}.spec.*"
							]
						},
						{
							"name": "C# Interface",
							"priority": 5,
							"breakChars": [
								"{Cap}"
							],
							"expressions": [
								"{1}.cs",
								"I{1}.cs"
							]
						},
						{
							"name": "C# Test",
							"priority": 5,
							"breakChars": [
								"{Cap}"
							],
							"expressions": [
								"{1}.cs",
								"{1}Test.cs",
								"{1}Tests.cs"
							]
						},
						{
							"name": "C# Controller, Logic, Repository",
							"priority": 5,
							"breakChars": [
								"{Cap}"
							],
							"expressions": [
								"{1}Controller.cs",
								"{1}Logic.cs",
								"{1}Repository.cs"
							]
						}
					]
				}
			}
		}]
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
